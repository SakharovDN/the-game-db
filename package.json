{
  "name": "the-game-db",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --port 3000 --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "format": "prettier . --write",
    "lint": "eslint . --fix && npx stylelint \"**/*.scss\" --fix",
    "gen-i18n": "i18next-resources-for-ts interface -c \"This file is generated by i18next-resources-for-ts, command 'npm run gen-i18n'\" -i ./public/locales/en -o ./src/@types/resources.d.ts"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --fix",
    "*": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.5",
    "axios": "^1.7.2",
    "classnames": "^2.5.1",
    "history": "^5.3.0",
    "i18next": "^23.11.5",
    "i18next-http-backend": "^2.5.2",
    "i18next-icu": "^2.3.0",
    "i18next-resources-for-ts": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^14.1.2",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "sass": "^1.77.5",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-sass-guidelines": "^11.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.13.0",
    "vite": "^5.2.0",
    "vite-plugin-checker": "^0.6.4",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
